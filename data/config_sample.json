{
    # server address
    "server" : "redis",
    "port" : "6379",
    "channels" : [
        "webapp"
    ],

    # should we fork() and become unix daemon?
    "daemonize" : 1,

    # where caches go there
    "cachedir" : "data/cache",

    # unprivileged system user to run bot as
    "user" : "nobody",

    # logs goes there
    "log" : "/var/log/aleesa-webapp/aleesa-webapp.log",
    "loglevel" : "notice",

    # ditto
    "pid" : "/var/run/aleesa-webapp/aleesa-webapp.pid",

    # maximal amount of message forwardings, to avoid endless loops
    "forwards_max" : 5,

    "openweathermap" : {
        # (For shitty political reasons) 0 - use coordinates instead of coutry code, 1 - use country codes
        "country" : 0,
        "appid" : "get_it_on_openweathermap.org"
    },

    "image" : {
        "dir" : "data/image",
        "flickr" : {
            "consumer_key" : "key",
            "consumer_secret" : "key_secret",
            "verifier" : "verifier_key"
        }
    }
}
